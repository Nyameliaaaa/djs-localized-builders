{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["esnext"],
        "baseUrl": "src",
        "outDir": "dist",
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "pretty": true,
        "noEmitOnError": true,
        "strict": true,
        "experimentalDecorators": true
    }
}
